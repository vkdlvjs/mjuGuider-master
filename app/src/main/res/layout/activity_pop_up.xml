<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--맨위에 건물이름 있으면 좋을 거 같아서 그냥 바꿨다-->
        <TextView
            android:id="@+id/popup_bulidingName"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ff7a00"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--  건물 이미지 뷰 -->
        <ImageView
            android:id="@+id/popup_imageView"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <!-- 안드로이드에 선 긋기 : @xml_border file 만들어서 추가하기. -->
            <!-- 건물 이름 관련 텍스트 (DB에서 받아올 것) -->
            <!--<TextView-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:textColor="#000000"-->
            <!--android:text="빌딩 이름"-->
            <!--/>-->

            <!-- 건물 설명 관련 텍스트 (DB에서 받아올 것) -->
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:textColor="#000000"
                android:id="@+id/popup_buildingDescription"/>

            <!-- 아이콘 리스트 (DB에서 받아올 것. 추후 생성 요망) -->
            <!--<ListView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:id="@+id/popup_list">-->
            <!--</ListView>-->

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="이벤트!"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:id="@+id/popup_event"
            />
    </LinearLayout>>

    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!-- 닫기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="확인"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>